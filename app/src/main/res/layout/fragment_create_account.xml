<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/static_white"
    android:orientation="vertical"
    android:padding="@dimen/_15sdp"
    tools:context=".view.auth.createAccount.CreateAccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cubano"
                android:text="FIRST NAME"
                android:textColor="@color/static_main"
                android:textSize="@dimen/_12ssp" />

            <EditText
                android:id="@+id/et_first_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/bg_light_grey_5"
                android:fontFamily="@font/regular"
                android:hint="Enter first name"
                android:inputType="text"
                android:paddingHorizontal="@dimen/_10sdp"
                android:textColor="@color/colorDarkGrey"
                android:textSize="@dimen/_12ssp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cubano"
                android:text="LAST NAME"
                android:textColor="@color/static_main"
                android:textSize="@dimen/_12ssp" />

            <EditText
                android:id="@+id/et_last_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/bg_light_grey_5"
                android:fontFamily="@font/regular"
                android:hint="Enter last name"
                android:inputType="text"
                android:paddingHorizontal="@dimen/_10sdp"
                android:textColor="@color/colorDarkGrey"
                android:textSize="@dimen/_12ssp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:fontFamily="@font/cubano"
        android:text="EMAIL"
        android:textColor="@color/static_main"
        android:textSize="@dimen/_12ssp" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/bg_light_grey_5"
        android:fontFamily="@font/regular"
        android:hint="Enter your email"
        android:inputType="textEmailAddress"
        android:paddingHorizontal="@dimen/_10sdp"
        android:textColor="@color/colorDarkGrey"
        android:textSize="@dimen/_12ssp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:fontFamily="@font/cubano"
        android:text="PHONE (OPTIONAL)"
        android:textColor="@color/static_main"
        android:textSize="@dimen/_12ssp" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/bg_light_grey_5"
        android:fontFamily="@font/regular"
        android:hint="Enter your phone number"
        android:inputType="phone"
        android:paddingHorizontal="@dimen/_10sdp"
        android:textColor="@color/colorDarkGrey"
        android:textSize="@dimen/_12ssp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:fontFamily="@font/cubano"
        android:text="PASSWORD"
        android:textColor="@color/static_main"
        android:textSize="@dimen/_12ssp" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/bg_light_grey_5"
        android:fontFamily="@font/regular"
        android:hint="Enter your password"
        android:inputType="textPassword"
        android:paddingHorizontal="@dimen/_10sdp"
        android:textColor="@color/colorDarkGrey"
        android:textSize="@dimen/_12ssp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:fontFamily="@font/cubano"
        android:text="CONFIRM PASSWORD"
        android:textColor="@color/static_main"
        android:textSize="@dimen/_12ssp" />

    <EditText
        android:id="@+id/et_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/bg_light_grey_5"
        android:fontFamily="@font/regular"
        android:hint="Confirm your password"
        android:inputType="textPassword"
        android:paddingHorizontal="@dimen/_10sdp"
        android:textColor="@color/colorDarkGrey"
        android:textSize="@dimen/_12ssp" />

    <TextView
        android:id="@+id/btn_join"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/ripple_bg_main_5"
        android:fontFamily="@font/cubano"
        android:gravity="center"
        android:paddingHorizontal="@dimen/_20sdp"
        android:text="CREATE ACCOUNT"
        android:textColor="@color/static_white"
        android:textSize="@dimen/_13ssp" />

</LinearLayout>