<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_15sdp"
    android:background="@color/static_white"
    tools:context=".view.auth.login.LoginFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cubano"
        android:textColor="@color/static_main"
        android:text="EMAIL"
        android:textSize="@dimen/_12ssp"/>

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/bg_light_grey_5"
        android:layout_marginTop="@dimen/_5sdp"
        android:inputType="textEmailAddress"
        android:hint="Enter your email"
        android:paddingHorizontal="@dimen/_10sdp"
        android:fontFamily="@font/regular"
        android:textColor="@color/colorDarkGrey"
        android:textSize="@dimen/_12ssp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cubano"
        android:layout_marginTop="@dimen/_15sdp"
        android:textColor="@color/static_main"
        android:text="PASSWORD"
        android:textSize="@dimen/_12ssp"/>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/bg_light_grey_5"
        android:layout_marginTop="@dimen/_5sdp"
        android:inputType="textPassword"
        android:hint="Enter your password"
        android:paddingHorizontal="@dimen/_10sdp"
        android:fontFamily="@font/regular"
        android:textColor="@color/colorDarkGrey"
        android:textSize="@dimen/_12ssp"/>

    <TextView
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_gravity="end"
        android:background="@drawable/ripple_bg_main_5"
        android:fontFamily="@font/cubano"
        android:paddingHorizontal="@dimen/_20sdp"
        android:textColor="@color/static_white"
        android:textSize="@dimen/_13ssp"
        android:text="LOGIN"
        android:gravity="center"/>

</LinearLayout>